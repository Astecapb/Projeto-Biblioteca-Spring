# 1. busca por título (paginada)
###
echo "=== 1. BUSCA POR TÍTULO (paginada) ==="
curl -s "http://localhost:8080/api/livros?titulo=harry&page=0&size=5" \
  -H "Accept: application/json" \
  -w "\nHTTP: %{http_code}\n"

# 2. contagem de exemplares (todos os status)
###
echo "=== 2. CONTAGEM TOTAL DE EXEMPLARES ==="
curl -s "http://localhost:8080/api/livros/42/exemplares/count" \
  -H "Accept: application/json" \
  -w "\nHTTP: %{http_code}\n"

# 3. filtro único (disponíveis)
###
echo "=== 3. FILTRO ÚNICO (disponíveis) ==="
curl -s "http://localhost:8080/api/livros/42/exemplares/count?status=DISPONIVEL" \
  -H "Accept: application/json" \
  -w "\nHTTP: %{http_code}\n"

